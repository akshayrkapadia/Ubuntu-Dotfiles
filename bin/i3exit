#!/usr/bin/env bash
# /usr/bin/i3exit

case "$1" in
    lock)
        i3lock -f -t -i /home/akshay/Pictures/Eric_Cartman.png
	;;
    logout)
        i3-msg exit
        ;;
    #suspend)
    #    systemctl suspend
    #    ;;
    #hibernate)
    #    systemctl hibernate
    #    ;;
    reboot)
        systemctl reboot 
	;;
    shutdown)
        systemctl poweroff 
	;;
    *)
        echo "Usage: $0 [lock|logout|reboot|shutdown]"
        exit 2
esac

exit 0
